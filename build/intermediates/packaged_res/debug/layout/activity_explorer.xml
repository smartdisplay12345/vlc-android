<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="1920px"
    android:layout_height="1080px"
    android:background="#000000" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_list_bg" >

        <RelativeLayout
            android:id="@+id/rl_main_top"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/m_background" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="190px"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn" />

                <LinearLayout
                    android:layout_width="380px"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_storage"
                        android:layout_width="180px"
                        android:layout_height="match_parent"
                        android:background="@drawable/m_usb"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ffff00"
                        android:textSize="36px"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_youtube"
                    android:layout_width="350px"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn" />

                <androidx.legacy.widget.Space
                    android:layout_width="110px"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_wifi"
                    android:src="@drawable/selector_btn"
                    android:scaleType="fitXY"
                    android:layout_width="230px"
                    android:layout_height="match_parent"/>

                <androidx.legacy.widget.Space
                    android:layout_width="90px"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_wave"
                    android:layout_width="370px"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/selector_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wifi_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/m_wifi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp"
                    android:text="목차 버튼을 누르면 미러링을 시작합니다."
                    android:textColor="#ff0000"
                    android:textSize="30px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:textColor="#ffffff"
                android:textSize="25px"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ff0000"
                android:text="TEST 버전"
                android:textSize="62px"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_main_top"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="610px"
                android:layout_height="wrap_content"
                android:background="#000"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@drawable/m_titel_bg02" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0px" >

                    <ListView
                        android:id="@+id/lv_dir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fadeScrollbars="false"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="10px"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbarThumbVertical="@color/scrollbar_thumb"
                        android:scrollbarTrackVertical="@color/scrollbar_bg"
                        android:scrollbars="vertical" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="10px"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="610px"
                android:layout_height="wrap_content"
                android:background="#000"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@drawable/m_titel_bg03" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" >

                    <ListView
                        android:id="@+id/lv_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fadeScrollbars="false"
                        android:longClickable="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="10px"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbarThumbVertical="@color/scrollbar_thumb"
                        android:scrollbarTrackVertical="@color/scrollbar_bg"
                        android:scrollbars="vertical" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="610px"
                android:layout_height="wrap_content"
                android:background="#000"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@drawable/m_favorites_bg02" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" >

                    <ListView
                        android:id="@+id/lv_play_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fadeScrollbars="false"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="10px"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbarThumbVertical="@color/scrollbar_thumb"
                        android:scrollbarTrackVertical="@color/scrollbar_bg"
                        android:scrollbars="vertical" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_exit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Exit"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_usb"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="USB/SD"
            android:textSize="9sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_up"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Up"
            android:textSize="9sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_down"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Down"
            android:textSize="9sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_left"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Left"
            android:textSize="9sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_right"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Right"
            android:textSize="9sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="OK"
            android:textSize="9sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_del"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="delete"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_eq"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="EQ"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_setting"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Setting"
            android:textSize="9sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_aux_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:visibility="gone" >

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_video_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_aux_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="60sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>