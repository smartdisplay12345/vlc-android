<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="1920px"
    android:layout_height="1080px"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/m_mp3_background_2" >

            <ImageView
                android:id="@+id/iv_back"
                android:scaleType="fitXY"
                android:src="@drawable/selector_btn"
                android:layout_width="200px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_play_time_curr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="250px"
                android:text="00:00:00"
                android:textColor="#fff"
                android:textSize="30px"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/media_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="940px"
                android:layout_height="14px"
                android:layout_marginLeft="440px"
                android:layout_marginTop="50px"
                android:background="@drawable/a_progress_bg_940"
                android:indeterminate="false"
                android:progressDrawable="@drawable/tv_audioprogressbar" />

            <TextView
                android:id="@+id/tv_play_time_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1420px"
                android:text="00:00:00"
                android:textColor="#fff"
                android:textSize="30px"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_audio_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:textSize="55px"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="400px"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/album_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/a_cd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/a_back02"
                    android:orientation="vertical"
                    android:paddingLeft="130dp" >

                    <TextView
                        android:id="@+id/media_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Title"
                        android:textColor="#000"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/media_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Artist"
                        android:textColor="#000"
                        android:textSize="50px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/media_album"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Album"
                        android:textColor="#000"
                        android:textSize="50px"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10px"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="280px"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/iv_repeat"
                            android:layout_width="match_parent"
                            android:layout_height="90px"
                            android:background="@drawable/a_repeat_off" />

                        <ImageView
                            android:id="@+id/iv_volume"
                            android:layout_width="match_parent"
                            android:layout_height="330px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/a_vol0" />

                        <ImageView
                            android:id="@+id/iv_mute"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10px"
                            android:background="@drawable/a_sound" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_up_down"
                        android:layout_width="110px"
                        android:layout_height="520px"
                        android:layout_marginLeft="10px"
                        android:background="@drawable/a_updown_nor" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="520px"
                    android:layout_marginLeft="10px" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@drawable/a_list_nor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5px"
                            android:background="#000000" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@drawable/a_list_nor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5px"
                            android:background="#000000" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@drawable/a_list_nor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5px"
                            android:background="#000000" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@drawable/a_list_nor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5px"
                            android:background="#000000" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100px"
                            android:background="@drawable/a_list_nor" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/lv_audio_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:divider="@color/black"
                        android:dividerHeight="5px"
                        android:fadeScrollbars="false"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbarFadeDuration="0"
                        android:scrollbarSize="20px"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbarThumbVertical="@color/scrollbar_thumb"
                        android:scrollbarTrackVertical="@color/scrollbar_bg"
                        android:scrollbars="vertical" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/bt_exit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="Exit"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_up"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="Up"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_down"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="Down"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="-"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="+"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="OK"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="Play/Pause"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_repeat"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="반복"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_forward"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:onClick="onClick"
            android:text="forward"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_rewind"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:onClick="onClick"
            android:text="rewind"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_next"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="Next"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt_prev"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="Prev"
            android:textSize="9sp" />
    </LinearLayout>

</RelativeLayout>