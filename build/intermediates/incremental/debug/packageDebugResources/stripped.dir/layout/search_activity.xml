<?xml version="1.0" encoding="utf-8"?>

                                                            

    

                                           

                                                         

                 
                                      
                                                                         

                 
                              
                                                                          
           

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:tag="layout/search_activity_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/background_default">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:tag="binding_1"             
                    app:srcCompat="@drawable/ic_arrow_back" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/search_edit_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    app:endIconMode="clear_text">

                <EditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/search_hint"
                        android:imeOptions="actionSearch"
                        android:inputType="textFilter" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/background_default"
                android:tag="binding_2"                                                   >

            <LinearLayout
                    android:id="@+id/results_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/videos"
                        android:textAppearance="@style/Result.Title"
                        android:tag="binding_3"                                                                       />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/others_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/background_default"
                        android:tag="binding_4"                                                                       />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="?attr/default_divider"
                        android:tag="binding_5"                                                                       />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/tracks"
                        android:textAppearance="@style/Result.Title"
                        android:tag="binding_6"                                                                       />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/songs_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/background_default"
                        android:tag="binding_7"                                                                       />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="?attr/default_divider"
                        android:tag="binding_8"                                                                       />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/albums"
                        android:textAppearance="@style/Result.Title"
                        android:tag="binding_9"                                                                       />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/albums_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/background_default"
                        android:tag="binding_10"                                                                      />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:tag="binding_11"                                                                      
                        android:background="?attr/default_divider"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/artists"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="@style/Result.Title"
                        android:tag="binding_12"                                                                       />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/artists_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/background_default"
                        android:tag="binding_13"                                                                       />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:tag="binding_14"                                                                     
                        android:background="?attr/default_divider"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/genres"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="@style/Result.Title"
                        android:tag="binding_15"                                                                      />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/genres_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/background_default"
                        android:tag="binding_16"                                                                      />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"
                        android:tag="binding_17"                                                                        
                        android:background="?attr/default_divider"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/playlists"
                        android:layout_marginBottom="8dp"
                        android:textAppearance="@style/Result.Title"
                        android:tag="binding_18"                                                                         />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/playlists_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/background_default"
                        android:tag="binding_19"                                                                         />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/search_no_result"
                android:textAppearance="@style/Result.Title"
                android:tag="binding_20"                                                   />
    </LinearLayout>
         